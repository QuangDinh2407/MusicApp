<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root_layout">

    <View
        android:id="@+id/gradientOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="40dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/down_arrow_white"
            android:background="@android:color/transparent"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:id="@+id/tvAlbumName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginHorizontal="16dp"
            android:text="Album Name"/>

        <View
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="16dp"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>


    <!-- Layout cho chế độ mini -->
    <FrameLayout
        android:id="@+id/mini_player_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mini_player_height"
        android:visibility="gone">

        <View
            android:id="@+id/miniGradientOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:gravity="center_vertical">

            <!-- Container cho ảnh đĩa xoay -->
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp">

                <ImageView
                    android:id="@+id/imgMiniVinyl"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/disc" />

                <ImageView
                    android:id="@+id/imgMiniCover"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_border"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp">

                <TextView
                    android:id="@+id/tvMiniTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textPrimary"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tvMiniArtist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textPrimary"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:ellipsize="end"/>
            </LinearLayout>

            <!-- Control buttons -->
            <ImageButton
                android:id="@+id/btnMiniPrevious"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_skip_previous_white_36dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"/>

            <ImageButton
                android:id="@+id/btnMiniPlayPause"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_pause_white_36dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:layout_marginHorizontal="8dp"/>

            <ImageButton
                android:id="@+id/btnMiniNext"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_skip_next_white_36dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"/>
        </LinearLayout>
    </FrameLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/notification_modern_background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header with App Logo and Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/notification_app_logo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="6dp"
            android:src="@drawable/notification_app_logo"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music App"
            android:textColor="@color/notification_header_text"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Left Side - Song Info and Controls -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="16dp">

            <!-- Song Information -->
            <TextView
                android:id="@+id/notification_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="YÃªu 5 (Break Remix)"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/notification_title_modern"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/notification_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rhymastic"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/notification_text_modern"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- Media Controls -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/notification_previous"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_skip_previous"
                    android:tint="@color/notification_icon_modern"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/notification_play_pause"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_pause"
                    android:tint="@color/notification_icon_modern"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/notification_next"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_skip_next"
                    android:tint="@color/notification_icon_modern"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp" />

                <ImageView
                    android:id="@+id/notification_favorite"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="6dp"
                    android:src="@drawable/ic_favorite_border"
                    android:tint="@color/notification_icon_modern"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/notification_close"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="6dp"
                    android:src="@drawable/ic_close"
                    android:tint="@color/notification_icon_modern"
                    android:background="?android:attr/selectableItemBackgroundBorderless" />

            </LinearLayout>

            <!-- Progress Bar and Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/notification_current_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:29"
                    android:textColor="@color/notification_text_modern"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />

                <ProgressBar
                    android:id="@+id/notification_progress"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="15"
                    android:progressDrawable="@drawable/notification_progress_bar"
                    style="?android:attr/progressBarStyleHorizontal" />

                <TextView
                    android:id="@+id/notification_total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03:04"
                    android:textColor="@color/notification_text_modern"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>
        </LinearLayout>

        <!-- Right Side - Album Art -->
        <ImageView
            android:id="@+id/notification_album_art"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_cover"
            android:background="@drawable/rounded_album_cover"
            android:clipToOutline="true" />

    </LinearLayout>
</LinearLayout> 
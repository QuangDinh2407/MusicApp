<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment.MusicPlayerChildFragment.PlayMusicFragment">
    <LinearLayout
        android:id="@+id/full_player_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:layout_marginTop="30dp"
        android:padding="16dp"
        android:paddingHorizontal="16dp">

        <FrameLayout
            android:layout_width="371dp"
            android:layout_height="334dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/imgVinyl"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/disc" />

            <FrameLayout
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/imgCover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circle_border"
                    android:src="@drawable/test1"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"/>

            </FrameLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên bài hát"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/tvArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nghệ sĩ"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <ImageButton
                android:id="@+id/btnAddToPlaylist"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_playlist_add_white_24dp"
                android:background="@android:color/transparent"
                android:layout_marginHorizontal="24dp"
                android:padding="4dp" />

            <ImageButton
                android:id="@+id/btnDownload"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_download_white_24dp"
                android:background="@android:color/transparent"
                android:layout_marginHorizontal="24dp"
                app:tint="@color/player_button_color"
                android:padding="4dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

            <TextView
                android:id="@+id/tvCurrentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="14sp"/>

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"/>

            <TextView
                android:id="@+id/tvTotalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="32dp">

            <ImageButton
                android:id="@+id/btnShuffle"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_shuffle_white_24dp"
                android:background="@android:color/transparent"
                android:layout_marginEnd="24dp"
                android:padding="2dp"
                app:tint="@color/player_button_color" />

            <ImageButton
                android:id="@+id/btnPrevious"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_skip_previous_white_36dp"
                android:background="@android:color/transparent"/>

            <ImageButton
                android:id="@+id/btnPlayPause"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_play_white_36dp"
                android:background="@android:color/transparent"
                android:layout_marginHorizontal="32dp"/>

            <ImageButton
                android:id="@+id/btnNext"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_skip_next_white_36dp"
                android:background="@android:color/transparent"/>
        </LinearLayout>

            <ImageButton
                android:id="@+id/btnRepeat"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_no_repeat_white_24dp"
                android:background="@android:color/transparent"
                android:layout_marginStart="24dp"
                android:padding="2dp"
                app:tint="@color/player_button_color" />
        </LinearLayout>

    <!-- Container cho view download -->
    <FrameLayout
        android:id="@+id/downloadContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="0dp"/>

</FrameLayout>
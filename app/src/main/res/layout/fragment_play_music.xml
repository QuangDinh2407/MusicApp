<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root_layout">

    <View
        android:id="@+id/gradientOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Layout cho chế độ full -->
    <LinearLayout
        android:id="@+id/full_player_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_back_button"
            android:background="@android:color/transparent"
            android:layout_marginBottom="16dp"/>

        <FrameLayout
            android:layout_width="371dp"
            android:layout_height="334dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/imgVinyl"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/disc" />

            <FrameLayout
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/imgCover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circle_border"
                    android:src="@drawable/test1"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"/>

            </FrameLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên bài hát"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/tvArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nghệ sĩ"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

            <TextView
                android:id="@+id/tvCurrentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="14sp"/>

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"/>

            <TextView
                android:id="@+id/tvTotalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="32dp">

            <ImageButton
                android:id="@+id/btnPrevious"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_skip_previous_white_36dp"
                android:background="@android:color/transparent"/>

            <ImageButton
                android:id="@+id/btnPlayPause"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_play_white_36dp"
                android:background="@android:color/transparent"
                android:layout_marginHorizontal="32dp"/>

            <ImageButton
                android:id="@+id/btnNext"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_skip_next_white_36dp"
                android:background="@android:color/transparent"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Layout cho chế độ mini -->
    <FrameLayout
        android:id="@+id/mini_player_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mini_player_height"
        android:visibility="gone">

        <View
            android:id="@+id/miniGradientOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:gravity="center_vertical">

            <!-- Container cho ảnh đĩa xoay -->
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp">

                <ImageView
                    android:id="@+id/imgMiniVinyl"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/disc" />

                <ImageView
                    android:id="@+id/imgMiniCover"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_border"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp">

                <TextView
                    android:id="@+id/tvMiniTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textPrimary"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tvMiniArtist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textPrimary"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:ellipsize="end"/>
            </LinearLayout>

            <!-- Control buttons -->
            <ImageButton
                android:id="@+id/btnMiniPrevious"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_skip_previous_white_36dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"/>

            <ImageButton
                android:id="@+id/btnMiniPlayPause"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_pause_white_36dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:layout_marginHorizontal="8dp"/>

            <ImageButton
                android:id="@+id/btnMiniNext"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_skip_next_white_36dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"/>
        </LinearLayout>
    </FrameLayout>

</FrameLayout> 
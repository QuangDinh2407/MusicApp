<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/notification_background_rounded"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Song Information Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/notification_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/notification_title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/notification_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/notification_text"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Media Controls Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/notification_previous"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="10dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_skip_previous"
            android:tint="@color/notification_icon"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/notification_play_pause"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="14dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_play"
            android:tint="@color/notification_icon"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/notification_next"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="10dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_skip_next"
            android:tint="@color/notification_icon"
            android:layout_marginStart="8dp" />

        <!-- Spacer to push close button to the right -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/notification_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close"
            android:tint="@color/notification_icon"
            android:alpha="0.7" />
    </LinearLayout>
</LinearLayout> 
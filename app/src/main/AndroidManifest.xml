        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_new"
        android:supportsRtl="true"
        android:theme="@style/AppThemeNoWallpaper"
        tools:targetApi="31">

        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="688473293831834"/>
        <meta-data android:name="com.facebook.sdk.ClientToken" android:value="884cc8ba55d9e21ce6c96bcfc1bc1b12"/>

        <activity
            android:name=".Auth.LoginActivity"
                android:exported="true"
            android:theme="@style/AppThemeNoWallpaper">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Auth.RegisterActivity"
            android:exported="false"
            android:theme="@style/AppThemeNoWallpaper" />

        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <activity
            android:name=".AlbumSongsActivity"
            android:exported="false" />

        <service
            android:name=".Services.MusicService"
            android:enabled="true"
            android:exported="false" />
    </application>


</manifest>